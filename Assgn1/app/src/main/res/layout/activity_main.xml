<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="320dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:text="Assignment 1"
            android:textColor="#020200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonjour "></TextView>

                    <TextView
                        android:id="@+id/world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="World"></TextView>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/BonjourGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/alpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="bgclick"
                        android:text="Alpha"></RadioButton>

                    <RadioButton
                        android:id="@+id/bravo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="bgclick"
                        android:text="Bravo"></RadioButton>

                    <RadioButton
                        android:id="@+id/charlie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="bgclick"
                        android:text="Charlie"></RadioButton>
                </RadioGroup>

                <Button
                    android:id="@+id/bonjourButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Say Bonjour"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi "></TextView>

                    <TextView
                        android:id="@+id/seneca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seneca"></TextView>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/HiGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="hgclick"
                        android:text="Delta"></RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="hgclick"
                        android:text="Echo"></RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="hgclick"
                        android:text="Foxtrot"></RadioButton>
                </RadioGroup>

                <Button
                    android:id="@+id/hiButton"
                    android:layout_width="71dp"
                    android:layout_height="40dp"
                    android:text="Say Hi"></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="28"
                android:background="#FF0000"
                android:text="Red"
                android:id="@+id/red"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="28"
                android:background="#00FF00"
                android:text="Green"
                android:id="@+id/green"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="28"
                android:background="#0000FF"
                android:layout_marginLeft="4dp"
                android:text="Blue"
                android:id="@+id/blue"></CheckBox>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Colours"
            android:id="@+id/colours"></Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>