<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFBB33"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab 7"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF4444">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="NAME"
                    android:textColor="#000000"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/l_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLength="8"
                    android:hint="NAME">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPT"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/l_dept"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLength="8"
                    android:hint="DEPT">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YEAR"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/l_year"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="YEAR"
                    android:inputType="numberSigned"
                    android:maxLength="8">
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/l_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textSize="18dp"
                android:maxLength="8"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#AA66CC">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/r_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="NAME"
                    android:maxLength="8">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPT"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/r_dept"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="DEPT"
                    android:maxLength="8">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YEAR"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/r_year"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="YEAR"
                    android:maxLength="8"
                    android:inputType="numberSigned">
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/r_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textSize="18dp"
                android:inputType="numberDecimal"></Button>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW"
        android:textSize="18dp">
    </Button>




</LinearLayout>
